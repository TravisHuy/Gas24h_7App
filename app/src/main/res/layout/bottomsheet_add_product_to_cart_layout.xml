<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_cover_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="4dp"
            >
            <ImageView
                android:id="@+id/product_cover_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_test"
                />

            <ImageView
                android:id="@+id/delete_cover_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrows_angle_expand"
                android:layout_gravity="top|end"
                android:padding="4dp"
                android:background="@drawable/background_back"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_x_lg"
                android:layout_gravity="end"
                />
            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ9.0000"
                android:textSize="17sp"
                android:textColor="#FF0000"
                android:layout_marginTop="35dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kho: "
                    />
                <TextView
                    android:id="@+id/stock_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="13000"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C8C6C6"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_count"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/decrease_btn"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dash"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/quantity_edit"
                android:layout_width="32dp"
                android:layout_height="25dp"
                android:text="1"
                android:inputType="number"

                android:textSize="12sp"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:background="@drawable/edit_input_count__product"
                />
            <ImageView
                android:id="@+id/increase_btn"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ECECEC"
        />
    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm vào Giỏ hàng"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        />
</LinearLayout>