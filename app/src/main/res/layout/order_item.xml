<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/checkBox">

            <ImageView
                android:id="@+id/order_item_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_image"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view_cart"
            app:layout_constraintTop_toTopOf="@+id/card_view_cart">

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_medium"
                android:maxLines="1"
                android:text="Gian nan đi tìm lăng mộ Hoàng đế Quang Trung" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                >
                    <TextView
                        android:id="@+id/order_product_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="đ90.000"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/order_count_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x4"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
       android:id="@+id/view"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#C8C6C6"
       android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tin Nhắn"
            android:fontFamily="@font/roboto"
            />
        <EditText
            android:id="@+id/order_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColorHint="#808080"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:gravity="end"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="Để lại lời nhắn"
            />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C8C6C6"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số tiền"
                android:fontFamily="@font/roboto"
                />
            <TextView
                android:id="@+id/order_count_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/count_product"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto"
                />
            <TextView
                android:id="@+id/product_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="đ179.000"
                android:textSize="16sp"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#ECECEC"  />
    </LinearLayout>
</androidx.cardview.widget.CardView>