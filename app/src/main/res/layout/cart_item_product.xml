<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="start|center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_cart"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/checkBox">

            <ImageView
                android:id="@+id/cart_item_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_image"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_view_cart"
            app:layout_constraintTop_toTopOf="@+id/card_view_cart">

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gian nan đi tìm lăng mộ Hoàng đế Quang Trung"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="60dp"
                >
                <TextView
                    android:id="@+id/cart_price_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ90.000"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/cart_price_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ90.000"
                    android:textSize="11sp"
                    android:layout_marginStart="5dp"
                    android:alpha="0.7"
                    app:layout_constraintBottom_toBottomOf="@+id/cart_price_reduce"
                    app:layout_constraintStart_toEndOf="@+id/cart_price_reduce"
                    app:layout_constraintTop_toTopOf="@+id/cart_price_reduce" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/background_count"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <ImageView
                        android:id="@+id/decrease_btn"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dash"
                        android:layout_gravity="center"
                        />
                    <EditText
                        android:id="@+id/quantity_product_cart"
                        android:layout_width="32dp"
                        android:layout_height="25dp"
                        android:text="1"
                        android:inputType="number"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:textAlignment="center"
                        android:background="@drawable/edit_input_count__product"
                        />
                    <ImageView
                        android:id="@+id/increase_btn"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_plus"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>